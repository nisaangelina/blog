<!-- Main Content -->
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <div class="post-preview">
          <% @blogpost.each do |blogpost| %>
              <h2 class="section-heading"><%= blogpost.title%></h2>
              <p style="font-style: italic; font-size: 15px"><%=blogpost.summary%></p>
              <p><%= blogpost.content%></p>
               <div class="clearfix">
                <%=link_to 'Show', blogpost_path(blogpost.id), class: 'btn btn-primary float-left' %>
                <%=link_to 'Edit this post', edit_blogpost_path(blogpost), class: 'btn btn-primary float-left' %>
                <%= button_to "Delete", blogpost, class: 'btn btn-delete float-right', method: :delete, data: {confirm: "Really delete the post?"}
%>
              </div>
              <hr>
              <% end %>
          <!-- Pager -->
           <div class="clearfix">
            <%= link_to 'Add Post', new_blogpost_path, class: 'btn btn-primary float-right' %>
         </div>
        </div>
      </div>
    </div>
    <hr>
