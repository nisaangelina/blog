<!-- Main Content -->
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <div class="post-preview">
          <h2 class="post-title"><%= @blogpost.title %></h2>
          <h3 class="post-subtitle"><%= @blogpost.summary %></h3>
          <p style="font-style:'italic'; font-size='15px'"><%= @blogpost.content %></p>
        </div>
          <div class="clearfix">
             <% if is_admin? || correct_user(@blogpost.user) %>
              <%=link_to 'Edit this post', edit_blogpost_path(@blogpost), class: 'btn btn-primary float-left' %>
              <%= button_to "Delete", @blogpost, class: 'btn btn-delete float-right', method: :delete, data: {confirm: "Really delete the post?"}%>
            <% end %>
          </div>
      </div>
    </div>
    <hr>