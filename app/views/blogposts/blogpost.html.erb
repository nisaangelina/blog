<!-- Main Content -->
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <div class="post-preview">
        </div>
        <hr>
          <% @blogposts.each do |blogpost|  %>
            <div class="post-preview">
                <h2 class="post-title">
                  <%= link_to blogpost.title, blogpost_path(blogpost.id), class: 'post.html' %>
                </h2>
              <p class="post-meta">Posted by
               <%=link_to blogpost.user.name, user_path(blogpost.user_id) %>
                on September 18, 2018</p>
            <hr>
            </div>
          <% end %>
          </div>
        </div>
      </div>
    </div>

